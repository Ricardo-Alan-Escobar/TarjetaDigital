<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tab Component</title>
    <style>
        .tabs {
            display: flex;
            border-bottom: 1px solid #e0e0e0;
        }
        .tab-button {
            background: none;
            border: none;
            padding: 15px 30px;
            cursor: pointer;
            font-size: 16px;
            color: #555;
            transition: background-color 0.3s, color 0.3s;
            flex: 1;
        }
        .tab-button:hover {
            background-color: #f5f5f5;
        }
        .tab-button.active {
            color: brown;
            border-bottom: 2px solid brown;
            font-weight: bold;
        }
        .tab-content {
            padding: 20px;
            display: none;
        }
        .tab-content.active {
            display: block;
        }
        #tab1{
            font-size: medium;
        }
        .card1{
            border: 1px solid rgb(222, 189, 189);
            border-radius: 6px;
            padding: 13px;
            box-shadow: 1px 1px 3px rgb(212, 212, 212);
            margin-bottom: 15px;
        }
        #icon1{
            padding-right: 35px;
            padding-left: 15px;
        }
        #icon2{
            margin-right: 4px;
        }
    </style>
</head>
<body>
    <div class="tab-container">
        <!-- Botones de pestañas -->
        <div class="tabs">
            <button class="tab-button active" data-tab="tab1"><i class="fa-solid fa-user"  id="icon2"></i> Contacto</button>
            <button class="tab-button" data-tab="tab2"><i class="fa-solid fa-map-location-dot " id="icon2"></i> Ubicación</button>
        </div>
        <!-- Contenido de pestañas -->
        <div class="tab-content active" id="tab1">
            <div class="card1"> 
                <i class="fa-solid fa-mobile-screen" id="icon1"></i> +55 444 333 4321
            </div>
            <div class="card1"> 
                <i class="fa-solid fa-mobile-screen" id="icon1"></i> +55 444 333 4321
            </div>
            <div class="card1"> 
                <i class="fa-solid fa-mobile-screen " id="icon1"></i> +55 444 333 4321
            </div>
            <div class="card1"> 
                <i class="fa-solid fa-mobile-screen" id="icon1"></i> +55 444 333 4321
            </div>
        </div>
        <div class="tab-content" id="tab2">
            <p>Content for Option 2</p>
        </div>
    </div>

    <script>
        // Ejecutar después de que el DOM esté cargado
        document.addEventListener('DOMContentLoaded', () => {
            const buttons = document.querySelectorAll('.tab-button');
            const contents = document.querySelectorAll('.tab-content');

            // Asignar eventos a cada botón
            buttons.forEach(button => {
                button.addEventListener('click', () => {
                    const tabId = button.getAttribute('data-tab');

                    // Eliminar la clase "active" de todos los botones y pestañas
                    buttons.forEach(btn => btn.classList.remove('active'));
                    contents.forEach(content => content.classList.remove('active'));

                    // Agregar la clase "active" al botón y contenido seleccionados
                    button.classList.add('active');
                    document.getElementById(tabId).classList.add('active');
                });
            });
        });
    </script>
</body>
</html>
