---
import Layout from '../layouts/Layout.astro';
import Banner from '../images/banner.jpg'
import Perfil from '../images/perfil.jpeg'
import Card from '../components/Card.astro';
---

<Layout title="¡Bienvenido!">
	
	<main>
	  <div class="container">
		<div class="banner">
		  <img src={Banner.src} alt="Banner" class="banner-image">
		  <img src={Perfil.src} alt="Perfil" class="perfil">
		</div>

		<div class="links">
		<div class="icon" id="icon1">	<a href="https://www.whatsapp.com/?lang=es_LA" class="telefono"><i class="fa-solid fa-mobile-screen"></i></a></div>
		<div class="icon" id="icon2">	<a href="https://workspace.google.com/intl/es-419_mx/gmail/" class="correo"><i class="fa-regular fa-envelope"></i></a></div>
		</div>

		<div class="name">
			<p class="nombre"><strong>Sandra jane Doe</strong></p>
			<p class="puesto">Gerente de Ventas</p>
			<p class="puesto">...</p>
			<p class="puesto2">¡Estoy aqui para ayudarte!</p>
		</div>
        <Card></Card>
		<div class="contacto">
		<a href="https://www.whatsapp.com/?lang=es_LA" class="contactame"><strong>¡Contactame!</strong></a>
	</div>  
	</div>
	</main>
  </Layout>
  
  <style>
	main {
		margin: auto;
		width: 700px;
		max-width: calc(100% );
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.puesto{
		font-size: 19px;
	}
	.contacto{
		display: flex;
		justify-content: center;
		align-items: center;
		margin-bottom: 15px;
		
	}
	.contactame {
      display: inline-block;
      border: none;
      border-radius: 8px;
      background: linear-gradient(90deg, #4CAF50, #2E7D32);
      color: white;
      text-decoration: none;
      font-size: 16px;
      font-weight: bold;
      padding: 10px 50px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      transition: all 0.3s ease-in-out;
      text-align: center;
    }

    .contactame:hover {
      background: linear-gradient(90deg, #81C784, #388E3C);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
      transform: translateY(-3px);
    }

    .contactame:active {
      transform: translateY(0);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
	.puesto2{
		font-size: 15px;
		
	}
	.nombre{
		font-size:x-large;
	}
	#icon2{
		margin-left: 85px;
	}
    .name{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		
		color: rgb(68, 63, 63);
		margin-top: 15px;
		margin-bottom: 20px;
		
	}
	.name p {
		 margin: 0;
		  padding: 1.5px; 
		  line-height: 1; 
		}

	.container {
	  height: auto;
	  background-color: rgb(255, 255, 255);
	  display: flex;
	  flex-direction: column;
	  border-radius: 8px;
	  color: rgb(49, 46, 46);
	}
	.icon{
		display: flex;
		justify-content: center;
		align-items: center;
		border-radius: 100%;
		background-color: brown;
		width: 45px;
		height: 45px;
	}
	.correo, .telefono{
		color: white;
		padding: 5px;
	}
	.banner {
	  position: relative;
	  width: 100%;
	  height: 180px;
	  
	}
	.banner-image {
  width: 100%;
  height: 100%;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}

	.perfil {
	  position: absolute;
	  bottom: -80px; 
	  left: 50%;
	  transform: translateX(-50%);
	  width: 120px;
	  height: 120px;
	  border-radius: 50%;
	  border: 3px solid white; 
	  object-fit: cover;
	}
	.links{
		display: flex;
		justify-content: space-around;
		margin-top: 25px;
	}

  </style>
