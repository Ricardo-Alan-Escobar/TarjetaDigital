---
import Layout from '../layouts/Layout.astro';
import Banner from '../images/banner.jpg'
import Perfil from '../images/perfil.jpeg'
import Card from '../components/Card.astro';
---

<Layout title="¡Bienvenido!">
	
	<main>
	  <div class="container">
		<div class="banner">
		  <img src={Banner.src} alt="Banner" class="banner-image">
		  <img src={Perfil.src} alt="Perfil" class="perfil">
		</div>

		<div class="links">
		<div class="icon" id="icon1">	<a href="" class="telefono"><i class="fa-solid fa-mobile-screen"></i></a></div>
		<div class="icon" id="icon2">	<a href="" class="correo"><i class="fa-regular fa-envelope"></i></a></div>
		</div>

		<div class="name">
			<p class="nombre"><strong>Sandra jane Doe</strong></p>
			<p class="puesto">Gerente de Ventas</p>
			<p class="puesto">...</p>
			<p class="puesto">¡Bienvenido !</p>
		</div>
        <Card></Card>
	  </div>
	</main>
  </Layout>
  
  <style>
	main {
		margin: auto;
		width: 700px;
		max-width: calc(100% );
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.puesto{
		font-size:medium;
	}
	.nombre{
		font-size:x-large;
	}
	#icon2{
		margin-left: 85px;
	}
    .name{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		
		color: rgb(49, 46, 46);
		margin-top: 12px;
		margin-bottom: 20px;
		
	}
	.name p {
		 margin: 0;
		  padding: 1.5px; 
		  line-height: 1; 
		}

	.container {
	  height: 500px;
	  background-color: rgb(255, 255, 255);
	  display: flex;
	  flex-direction: column;
	  border-radius: 8px;
	  color: rgb(49, 46, 46);
	}
	.icon{
		display: flex;
		justify-content: center;
		align-items: center;
		border-radius: 100%;
		background-color: brown;
		width: 45px;
		height: 45px;
	}
	.correo, .telefono{
		color: white;
		padding: 5px;
	}
	.banner {
	  position: relative;
	  width: 100%;
	  height: 180px;
	  
	}
	.banner-image {
  width: 100%;
  height: 100%;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}

	.perfil {
	  position: absolute;
	  bottom: -80px; 
	  left: 50%;
	  transform: translateX(-50%);
	  width: 120px;
	  height: 120px;
	  border-radius: 50%;
	  border: 3px solid white; 
	}
	.links{
		display: flex;
		justify-content: space-around;
		margin-top: 25px;
	}

  </style>
